
{{>layouts/header}}
<form class="container" action="/articles/update" method="post">
    <input type="hidden" name="id" value="{{article.id}}">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type = "text" class="form-control" name="title" value={{article.title}}> <br/>
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content">{{article.content}}</textarea>
    </div>
    <button class="btn btn-primary" type="submit">제출</button>
    <button class="btn btn-primary" ><a href="/articles/{{article.id}}">뒤로 가기</a></button>
</form>
</form>

{{>layouts/footer}}